{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "baseUrl": "./src",
    "declaration": true,
    "allowImportingTsExtensions": true,
    "disableSizeLimit": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"],
      "@constants": ["./constants.ts"],
      "@utils": ["./utils.ts"],
      "@schemas": ["./schemas/index.ts"],
      "@query-builder": ["./query-builder/index.ts"],
      "@queries": ["./query-builder/queries/index.ts"],
      "@fragments": ["./query-builder/fragments/index.ts"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/.shared/sanity.types.ts"],
  "exclude": ["node_modules"]
}
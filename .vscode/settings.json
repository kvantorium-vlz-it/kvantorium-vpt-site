{
  "files.associations": {
    "*.postcss": "scss",
  },
  "cssVariables.lookupFiles": [
    "assets/css/variables.scss"
  ],
  "stylelint.enable": true,
  "stylelint.validate": [
    "css",
    "scss",
    "postcss"
  ],
  "[scss]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  }
}
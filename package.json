{
  "name": "kvantorium-vpt-site",
  "version": "3.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:root": "pnpm install --filter=\"{.}\"",
    "install:packages": "pnpm install --filter=\"{packages/**}\" && pnpm run dev:prepare",
    "install:apps": "pnpm install --filter=\"{apps/**}\"",
    "install:deps": "pnpm run install:root && pnpm install:packages && pnpm install:apps",

    "dev": "dotenv -- turbo run dev --parallel",
    "dev:prepare": "dotenv -- turbo run dev:prepare --parallel",

    "build": "dotenv -- turbo run build"
  },
  "devDependencies": {
    "turbo": "latest",
    "dotenv-cli": "latest"
  },
  "engines": {
    "node": ">=v16.18.1"
  }
}
